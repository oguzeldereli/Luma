{
  "Luma": {
    "Database": {
      "Provider": "Microsoft.EntityFrameworkCore.Sqlite",
      "ConnectionString": "Data Source=auth.db"
    },
    "AuthenticationServer": {
      "UserLoginSessionsCookieName": "Luma.UserLoginSession",
      "UserLoginSessionsValidForMinutes": 1440, // has to be between 60 and 10080 (inclusive)
      "EnableUserRegisterationByUI": true,
      "UseCustomFiles": false,
      "CustomFiles": {
        "ViewMode": "Razor", // or Static
        "Path": "./wwwroot"
      }
    },
    "OAuth": {
      "AuthorizationCode": {
        "ValidForSeconds": 90 // has to be between 60 and 120 (inclusive)
      },
      "Clients": [
        {
          "ClientId": "luma-self-hosted",
          "ClientSecretSHA256_Base64": "Y2UyMGQ3OWRlNjRiYzk2M2ZlMjljYmNmYzNlMDNmZTE2MWIzYTQ1ZDc2YzJmYzNiYmY2NmExZWY3OGViYjdiZA==",
          "DisplayName": "Luma Auth",
          "DefaultRedirectUri": "https://localhost/calback",
          "RedirectUris": [ "https://localhost/calback" ],
          "AllowedGrantTypes": [ "client_credentials", "authorization_code", "refresh_token" ],
          "DefaultScope": "openid profile email",
          "AllowedScopes": [ "openid", "profile", "email" ],
          "IsConfidential": true
        }
      ]
    },
    "Tokens": {
      "MagicLinkToken": {
        "ValidForMinutes": 15, // has to be smaller than or equal to 20
        "CodeLength": 32 // has to be between 32 and 64 (inclusive)
      },
      "NumericCodeToken": {
        "ValidForMinutes": 10, // has to be smaller than or equal to 20
        "DigitCount": 6 // has to be between 6 and 12 (inclusive)
      },
      "AccessToken": {
        "Issuer": "Luma",
        "TokenType": "Jwt", // or Opaque
        "DefaultScope": "openid profile email",
        "ValidForMinutes": 15 // has to be between 10 and 30 (inclusive)
      },
      "RefreshToken": {
        "ValidForDays": 30 // has to be between 7 and 90 (inclusive)
      }
    },
    "Keys": {
      "Hmac": {
        "DefaultKeyId": "",
        "Keys": {
          /* "key-id" : "base64-" */
        }
      },
      "Jwt": {
        "SigningAlgorithm": "RS256", // or ES256
        "DefaultKeyId": "V1",
        "Keys": {
          /* "key-id" : { "PrivateKeyPath" : "path", "PublicKeyPath" : "path" } */
          "V1": {
            "PrivateKeyPath": "./Keys/private.pem",
            "PublicKeyPath": "./Keys/public.pem"
          }
        }
      }
    }
  }
}
